<%# new e edit %> 

<% if(@distance_price.errors.any?) %>
    <p>Verifique os erros abaixo:</p>
    <ul> 
        <% @distance_price.errors.full_messages.each do |msg| %> 
            <li> <%= msg %> </li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: [@transport, @distance_price]) do |f| %>
  <div>
    <%= f.label :min_distance %>:
    <%= f.number_field :min_distance %>
  </div>
  <div> 
    <%= f.label :max_distance %>:
    <%= f.number_field :max_distance %>
  </div>
  <div> 
    <%= f.label :value_km %>:
    <%= f.number_field :value_km %>
  </div>
  <%= f.submit 'Salvar', class: "btn btn-bd-primary"%>
<% end %>

  <%= link_to 'Voltar', @transport, class: "btn btn-bd-primary" %>
